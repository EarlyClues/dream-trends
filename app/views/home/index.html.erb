<% if user_signed_in? %>
    <span>Hello, <%= current_user.email %>!</span>
    <%= link_to "Your Dreams", dreams_path %>
    <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
<% else %>
    <%= link_to('Log in or Signup', new_user_session_path)  %>
<% end %>

<h1> Dreams From Yesterday </h1>

<ul>
<% @dreams.each do |dream| %>
   <li> <%= link_to dream.title, dream_path(dream) %></li>
<% end %>
</ul>

<h1>Top Trends</h1>

<ul>
<% @top_trends.each do |trend_array| %>
   <li>
    <% trend = trend_array[0]%>
    <%= trend.word %><br/>
    <% trend.dreams.each do |dream| %>
        <%= link_to dream.title, dream_path(dream) %>
    <% end %>
   </li>
   <br/>
<% end %>
</ul>
